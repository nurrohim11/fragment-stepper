<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    >

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/multi_state_text_progress"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/multi_state_text_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_more_white_transp"
        />

    <TextView
        android:id="@+id/multi_state_text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Uploading photos"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        tools:ignore="MissingPrefix"
        android:textColor="@color/color_white_transp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/multi_state_text_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        />

</merge>